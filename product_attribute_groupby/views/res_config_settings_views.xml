<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.base.setup</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="9999"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="product_general_settings" position="after">
                    <div id="stored_product_attributes">
                        <h2>Stored product attributes</h2>
                        <div class='row mt16 o_settings_container' name="stored_attributes_setting_container">
                            <div class='col-xs-12 col-md-6 o_setting_box' id="stored_attributes_setting">
                                <div class='o_setting_right_pane'>
                                    <div class="w-50">
                                        <span class='o_form_label pe-1'>Stored attributes</span>
                                        <field name="stored_product_attributes_ids" widget="many2many_tags"/>
                                    </div>
                                    <div class="mt8">
                                        <button name="%(product.attribute_action)d" icon="fa-arrow-right" type="action" string="Manage stored attributes" class="btn-link"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>

    </data>
</odoo>