<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.base.setup</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="9999"/>
            <field name="inherit_id" ref="product.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <block id="product_general_settings" position="after">
                    <block id="stored_product_attributes" title="Stored Attributes">
                        <setting id="stored_product_attr_setting" string="Attributes" help="Store your attributes in order to use them in analysis">
                            <field name="stored_product_attributes_ids" class="o_light_label" widget="many2many_tags"/>

                            <div class="mt8">
                                <button name="%(product.attribute_action)d" icon="fa-arrow-right" type="action" string="Manage stored attributes" class="btn-link"/>
                            </div>
                        </setting>
                    </block>
                </block>
            </field>
        </record>

    </data>
</odoo>