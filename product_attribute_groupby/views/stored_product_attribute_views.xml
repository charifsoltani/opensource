<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="stored_product_attribute_tree_view" model="ir.ui.view">
            <field name="name">stored.product.attribute.tree.view</field>
            <field name="model">stored.product.attribute</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="attribute_id"/>
                    <field name="technical_name" groups="base.group_no_one"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        

        <record id="product_attribute_value_form_view" model="ir.ui.view">
            <field name="name">stored.product.attribute.form.view</field>
            <field name="model">stored.product.attribute</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_create_fields" string="Store &amp; Compute" type="object" class="oe_highlight" states="draft"/>
                        <button name="action_create_fields" string="Re-compute" type="object" class="oe_highlight" states="confirm"/>
                        <button name="action_delete_fields" string="Remove"  type="object" class="btn-danger" states="confirm"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="attribute_id"
                                   options="{'no_create':True}"
                                   domain="[('create_variant', '!=', 'no_variant')]"
                            />
                            <field name="technical_name" invisible="1"/>
                            <field name="technical_name" groups="base.group_no_one"/>
                            <field name="field_description" states="confirm"/>
                            <field name="field_help"  states="confirm"/>
                            <field name="show_in_filters"/>
                            <field name="show_in_group_by"/>
                        </group>
                        <group string="Fields" groups="base.group_no_one">
                            <field name="field_ids" nolabel="1" colspan="2" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_stored_product_attribute" model="ir.actions.act_window">
            <field name="name">Stored attributes</field>
            <field name="res_model">stored.product.attribute</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="setting_product_attribute" name="Products" parent="base.menu_custom" sequence="0"/>
        <menuitem id="menu_stored_product_attribute_mane" name="Stored attributes" parent="setting_product_attribute" action="action_stored_product_attribute"/>

    </data>
</odoo>